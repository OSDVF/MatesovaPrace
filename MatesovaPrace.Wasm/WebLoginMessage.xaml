<Page
    x:Class="MatesovaPrace.WebLoginMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MatesovaPrace"
    xmlns:models="using:MatesovaPrace.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <StackPanel>
        <CommandBar HorizontalAlignment="Left" OverflowButtonVisibility="Collapsed">
            <AppBarButton Icon="Back" Content="Back" Click="Back_Click" />
            <AppBarElementContainer>
                <TextBlock Text="Google Drive authentication" FontSize="18" Margin="12,8"/>
            </AppBarElementContainer>
        </CommandBar>
        <TextBlock Margin="10" Text="Continue to the Google Drive in the newly opened tab" FontSize="20" />
    </StackPanel>
</Page>
